<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="SubheaderTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/subheader_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/icon_left_padding</item>
        <item name="android:paddingRight">@dimen/list_item_right_padding</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="SinglelineEditTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">15</item>
    </style>

    <style name="MultilineEditTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:ems">15</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">7</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">10</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/add_ingredients</item>
    </style>

</resources>
